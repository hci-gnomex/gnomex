				<mx:Text text="{parentApplication.bulletin}" fontSize="12" fontStyle="normal"  textAlign="left" height="100%"   id="text4" width="100%"/>  			
			</mx:VBox>
		</mx:VBox>
		<mx:Spacer  height="100%"/>
