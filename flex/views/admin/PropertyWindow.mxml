					setComponentsFromProperty();
					
				} else {
					Alert.show(getProperty.lastResult..ACTMESSAGE.@TEXT);
				}
			}	

			private function setComponentsFromProperty(): void {
				organismCombo.selectedItem = null;
				platformCombo.selectedItem = null;
				analysisTypeCombo.selectedItem = null;
				
				setOwnerCombo();
				setCoreFacilityCombo();
				
				dirty.resetDirty();
			}
			
			private function setCoreFacilityCombo():void {
				coreFacilityCombo.selectedItem = null;
				for each (var c:Object in filteredCoreFacilityList) {
					if (c.@value == property.@idCoreFacility) {
						coreFacilityCombo.selectedItem = c;
						break;
					}
				}
				if (coreFacilityCombo.selectedItem == null) {
					Alert.show("Invalid core facility on selected Annotation.  Please contact GNomEx suppport");
					saveButton.enabled = false;
				} else {
					saveButton.enabled = true;
				}
				
				filteredExperimentPlatforms.refresh();
			}
			
			private function onSaveProperty(event:ResultEvent): void {
				if (saveProperty.lastResult.name() == "SUCCESS") {
					idProperty = saveProperty.lastResult.@idProperty;
					parentApplication.dictionaryManager.call("reload", "");
					parentApplication.getPropertyList.send();
					dispatchEvent(new Event("updateProperties"));
					getPropertyList.send();
					
					if(saveProperty.lastResult.@inactivate == 'true'){
						Alert.show("Certain options could not be deleted because they are associated with existing samples.  The option has been marked as inactive instead.");
					}
				} else {
					Alert.show(saveProperty.lastResult..ACTMESSAGE.@TEXT);
				}
			}	
			
			private function filterApplication(item:Object):Boolean {
				var doesMatchRequestCategory:Boolean = false;
				if (platformCombo.selectedItem != null && platformCombo.selectedItem.@value != '') {
					var codeRequestCategory:String = platformCombo.selectedItem.@value;
					if (item.@value == "") {
						// Leave blank item on the list
						return true;
					} 
					
					if (item.@isActive == 'N') {
						return false;
					}
					
					var theApplications:XMLList = parentApplication.dictionaryManager.xml.Dictionary.(@className == 'hci.gnomex.model.RequestCategoryApplication').DictionaryEntry.(@value != '' && @codeApplication == item.@value.toString());
					for each (var xref:Object in theApplications) {
						if (xref.@codeRequestCategory.toString() == codeRequestCategory) {
							doesMatchRequestCategory = true;
							break;
						}
					}
				}
				
				
				return doesMatchRequestCategory;
			}
			
			// Sort application by sortOrder field
			private function sortApplication(obj1:Object, obj2:Object, fields:Array=null):int {
				if (obj1 == null && obj2 == null) {
					return 0;
				} else if (obj1 == null) {
					return 1;
				} else if (obj2 == null) {
					return -1;
				} else {
					var app1:String = obj1.@application;
					var app2:String = obj2.@application;
					
					app1 = app1.toLowerCase();
					app2 = app2.toLowerCase();
					
					if (app1 < app2) {
						return -1;
					} else if (app1 > app2) {
						return 1;
					} else {
						return 0;
					}
				}			
			}
			
			public function sortPlatformApplications(obj1:Object, obj2:Object, fields:Array=null):int {
				if (obj1 == null && obj2 == null) {
					return 0;
				} else if (obj1 == null) {
					return 1;
				} else if (obj2 == null) {
					return -1;
				} else {
					var ed1:String = obj1.@display;
					var ed2:String = obj2.@display;			
					
					if (ed1 < ed2) {
						return -1;
					} else if (ed1 > ed2) {
						return 1;
					} else {
						ed1 = obj1.@applicationDisplay;
						ed2 = obj2.@applicationDisplay;					
						if (ed1 < ed2) {
							return -1;
						} else if (ed1 > ed2) {
							return 1;
						} else {				
							return 0;
						}
					}
				}
			}
			
			private function refreshApplicationFilter():void {
				filteredAppList.filterFunction = filterApplication;
				filteredAppList.refresh();
			}
			
			private function refresh(event:Event):void{
				radioButtonGroupTarget.selection = null;
				radioButtonGroupTarget.selectedValue = null;
				organismFilter.selectedIndex = -1;
				analysisTypeFilter.selectedIndex = -1;
				experimentPlatformFilter.selectedIndex = -1;
				init();
			}
			public function getTreeIcon(item:Object):Class {
				return null;
			}
			
			private function propertyListLabel(item:Object, column:AdvancedDataGridColumn):String {
				if(hasAppliesTo(item)) {
					return "*" + item.@name;
				} else{
					return item.@name;
				}
			}
			
			private function filterExperimentPlatforms(item:Object):Boolean {
				if (item != null) {
					if (item.@idCoreFacility != null || item.@idCoreFacility != "") {
						if (item.@idCoreFacility.toString() == coreFacilityCombo.selectedItem.@value) {
							return true;
						}
					}
				}
				return false;
			}
			
			private function onCoreFacilityChange():void {
				setDirty();
				filteredExperimentPlatforms.refresh();
			}
			
			public function hasAppliesTo(item:Object):Boolean {
				if(item.@appliesToOrganism != "" || item.@appliesToAnalysisType != "" || item.@appliesToRequestCategory != "" || item.@appliesToAppUser != ""){
					return true;
				} else {
					return false;
				}
			}
