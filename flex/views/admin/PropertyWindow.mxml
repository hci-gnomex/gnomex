					if (user.@idAppUser == property.@idAppUser) {
						this.ownerCombo.selectedItem = user;
						break;
					}
				}
				this.ownerCombo.enabled = parentApplication.hasPermission("canWriteDictionaries") ? true : false;
			}
			
