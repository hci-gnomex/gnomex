			private function filterNavTree(parent:XML):void{
				
				if (parent.children().length() > 0) {
					for (var i:int = 0; i < parent.children().length(); i++) {
						var req:XML = parent.children()[i];
						if(req.name() == 'Request'){
							if(billingItemFilter.selectedValue == 'po' && req.@type != 'Product Order'){
								deleteChild(parent.children(), i--);
							} else if(billingItemFilter.selectedValue == 'dsk' && req.@type != 'Disk Usage'){
								deleteChild(parent.children(), i--);
							} else if(billingItemFilter.selectedValue == 'exp' && (req.@type == 'Product Order' || req.@type == 'Disk Usage')){
								deleteChild(parent.children(), i--);
							}
						} else {
							filterNavTree(req);
							if (req.name() == 'Lab' && req.children().length() == 0) {
								deleteChild(parent.children(), i--);
							}
						}
					}
				}
			}
		
			private function filterEmptyRequests(parent:XML):void {
				if (parent.children().length() > 0) {
					for (var index:int = 0; index < parent.children().length(); index++) {
						var node:XML = parent.children()[index];
						if (node.name() == 'Request') {
							if (node.@hasBillingItems != null && node.@hasBillingItems == 'N') {
								deleteChild(parent.children(), index--);
							}
						} else {
							filterEmptyRequests(node);
						}
					}
				}
			}
			
